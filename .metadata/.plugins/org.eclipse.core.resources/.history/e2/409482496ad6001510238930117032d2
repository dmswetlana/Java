//класс Person (имя, возраст) 
import java.util.*;

public class Person 
{
	public String name=" ";
	public int age = 0;
	
	//создаём коллекцию для добавления в неё всех
	//создаваемых нами объектов класса Person
	static  List<Person> persons  = new  ArrayList<Person>();
	
	//счётчик  - сколько создали всего классов
	public static int counter=0; 
	
	//статический конструктор, выполняется после блока
	//инициализации статических переменных
	//вызывается неявно только один раз
	static{
		counter = 100;
	}
	

	
	//создаём конструктор для этого класса с двумя параметрами
	public Person(String name, int age){
		this.name = name;
		this.age = age;
		counter++;
		persons.add(this);
	}

	//создаём конструктор для этого класса без параметров
		public Person(){
			this.name = "Незнакомец";
			this.age = 10;
			counter++;
			persons.add(this);
		}
	
		//создаём конструктор для этого класса с одним параметров
				public Person(String name){
					//this.name = name;
			this(name,2);
		//если вызываем внутри другой конструктор, то это можно
		//сделать только один раз и первой строкой
				}
			
	//метод show выводит в консоль имя и возраст 
	public void show(){
		System.out.printf("%s - %d \n", this.name, this.age);
	}
	
	//метод showAll показывает всю коллекцию
	public static void showAll(){
		for(Person p : persons)
			p.show();
	}
	
	
	
}
