
public class Page88 {

	//динамическая инициализация
	//находим длину гипотенузы прямоугольного треугольника
	//по длине его катетов (теорема Пифагора)
	public static void main(String[] args) {
		double a=3.0, b = 4.0;
	
		double c = Math.sqrt(a*a + b*b);
		System.out.println("Гипотенуза равна = " + c);
		

	//демонстрация области действия блока кода
	int x = 10;  //эта переменная доступна всему коду
	            //из метода main()
	
	if (x==10){       //начало новой области действия,
		int y = 20;   //доступной только этому блоку кода
	
	//обе переменные x, y доступны в этой области действия
		System.out.println("x и y: " + x + " " +y);
			x = y * 2;
	}

	//y=100; //ОШИБКА! Переменная y недоступна в этой
	         //области действия
	
	System.out.println("х равно " + x);

	//демонстрация срока действия переменной
	
	for(x=0; x<3; x++){
		int y = -1; //переменная y инициализируется при
		            //каждом вхождении в блок кода
		System.out.println("y = " + y);
		 y = 100;
		 System.out.println("теперь y = " + y);
	}
	
	//демонстрация приведения типов
	byte b1;
	int i = 257;
	double d = 323.142;
	System.out.println("i = 254; d = 323.142");
	System.out.println("Преобразование типа int в тип byte:");
	b1 = (byte) i;
	System.out.println("i и b = " + i + " " + b1);
	
	
	
	
}	


}
